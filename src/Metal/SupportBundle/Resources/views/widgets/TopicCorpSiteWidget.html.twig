{% set popupId = 'topic-popup' %}

<div id="{{ popupId }}"
     class="callback-form popup-block opacity-border large" data-popup-template="#{{ popupId }}-template">
</div>

<script type="text/html" id="{{ popupId }}-template">
    <div class="popup-content">
        <div class="title-popup">Форма обратной связи</div>
        <span class="close-popup icon-popup-close clickable js-popup-closer"></span>

        <form id="{{ popupId }}-form" class="popup-form js-ajax-form-submit"
              action="{{ path('MetalUsersBundle:Topic:save') }}"
              data-success="close-popup"
              method="post"
              novalidate="novalidate">
            <fieldset>

                <div class="email-wrapper field-wrap">
                    {{ form_widget(form.title, {'attr' : {'placeholder' : 'Тема', 'class' : 'form-email ie-radius'}}) }}
                </div>

                <div class="email-wrapper field-wrap">
                    {{ form_widget(form.userName, {'attr' : {'placeholder' : 'Имя пользователя', 'class' : 'form-email ie-radius'}}) }}
                </div>

                <div class="email-wrapper field-wrap">
                    {{ form_widget(form.email, {'attr' : {'placeholder' : 'Электронная почта', 'class' : 'form-email ie-radius'}}) }}
                </div>

                <div class="textarea-wrapper field-wrap">
                    {{ form_widget(form.description, {'attr' : {'placeholder' : 'Сообщение', 'class' : 'form-textarea ie-radius', 'rows' : '5', 'data-bind-value': "description"}}) }}
                </div>

                <div class="submit-wrapper">
                    <input class="popup-form_send-button send-button button blue-bg ie-radius" type="submit"
                           value="Отправить" />
                </div>
            </fieldset>
            {{ form_rest(form) }}
        </form>
    </div>
</script>
