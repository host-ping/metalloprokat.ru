{% block text_part_header %}
    Скоро Новый Год!
{% endblock %}

{% block html_header %}
    <table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#171F26">
        <tr>
            <td valign="middle" style="padding: 23px; padding-right: 0; font-family: Arial; color: #FFFFFF; font-size: 24px; font-weight: bold; line-height: 24px;">
                <span style="color: #FFFFFF; text-decoration: none;">
                    <img src="{{ email_images_base_url~'/logo-metalloprokat.gif' }}" alt="Металлопрокат.ру" title="Металлопрокат.ру" border="0" width="201" height="30" style="vertical-align: top;" />
                </span>
            </td>
            <td valign="middle" align="right" style="padding: 23px; padding-left: 0; font-family: Arial; color: #A6A39D; font-size: 13px; line-height: 19px;">
                {% set datePeriod -%}29 октября 2013{%- endset %}
                {% if datePeriod %}{{ datePeriod }}  &bull;  {% endif %}<span style="color: #2972A6; text-decoration: none;">www.metalloprokat.ru</span>
            </td>
        </tr>
    </table>
{% endblock %}

