{% extends admin.getTemplate('edit') %}

{% block form %}
    <div class="box box-primary">

        <div class="box-header with-border">
            <h3 class="box-title">
                Импорт шаблонов метаданных
            </h3>
        </div>

        <div class="box-body">

            <form class="form-horizontal"
                  id="products-edit"
                  method="post"
                  {% if not admin_pool.getOption('html5_validate') %}novalidate="novalidate"{% endif %}
            >
                {% if form.vars.errors|length > 0 %}
                    <div class="sonata-ba-form-error">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="row control-group">
                    <div class="col-md-5">
                        {{ form_label(form.feed, null, {'label_attr' : {'class' : 'control-label'}}) }}

                        <div class="controls sonata-ba-field sonata-ba-field-standard-natural ">
                            {{ form_widget(form.feed, {'attr': {'rows': 50, 'cols': 250, 'class': 'form-control'}}) }}
                            {{ form_errors(form.feed) }}
                        </div>
                    </div>
                </div>

                {% block formactions %}
                    <div class="clearfix">
                        <div class="well well-small form-actions">
                            <input type="submit" class="btn btn-primary" name="btn_update_and_edit" value="Импортировать">

                            <a href="{{ admin.generateUrl('list') }}">
                                <input type="button" class="btn" value="Вернуться к списку">
                            </a>
                        </div>
                    </div>
                {% endblock formactions %}

                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}
