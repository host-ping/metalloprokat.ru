{% set popupId = 'send-email' %}

<div id="{{ popupId }}" class="send-email popup-block opacity-border large"
        data-popup-template="#{{ popupId }}-template"></div>

<script type="text/html" id="{{ popupId }}-template">
    <div class="popup-content">
        <div class="title-popup">Написать письмо</div>
        <span class="close-popup icon-popup-close clickable js-popup-closer"></span>
        <form id="{{ popupId }}-form" class="popup-form js-ajax-form-submit"
              data-success="close-popup"
              novalidate="novalidate"
              action="{{ path('MetalMiniSiteBundle:MiniSite:send_mail') }}"
              method="post">
            <fieldset>
                {% if form.userName is defined %}
                    <div class="field-wrap">
                        {{ form_widget(form.userName, {'attr' : {'class' : 'form-text ie-radius', 'placeholder' : 'Имя'} }) }}
                    </div>
                {% endif %}
                {% if form.userEmail is defined %}
                    <div class="field-wrap">
                        {{ form_widget(form.userEmail, {'attr' : {'class' : 'form-email ie-radius', 'placeholder' : 'Электронная почта'} }) }}
                    </div>
                {% endif %}

                <div class="field-wrap">
                    {{ form_widget(form.emailText, {'attr' : {'class' : 'form-textarea ie-radius', 'placeholder' : 'Текст'} }) }}
                    {{ form_widget(form.employee, {'attr' : {'class' : 'g-hidden', 'data-bind-value' : 'employee-id'} }) }}
                </div>
                <div class="submit-wrapper">
                    <input class="send-button button blue-bg ie-radius" type="submit" value="Написать"/>
                </div>
            </fieldset>
            {{ form_rest(form) }}
        </form>
    </div>
</script>
