<ul class="blogs list clearfix">
    {% for photo in pagerfanta %}
        <li class="item float-left">
            <a class="img-link {% if not photo.getPhoto().getSize() %}pattern-small{% endif %}"
               data-href="{{ path('MetalContentBundle:Instagram:photoView', {'id' : photo.id}) }}">

                {% if photo.getPhoto().getSize() %}
                  <img src="{{ vich_uploader_asset(photo, 'uploadedPhoto')|imagine_filter('instagram_photo_sq290') }}"
                       alt="{{ photo.description }}"
                       title="{{ photo.description }}"
                  />
                {% endif %}
                <div class="text-layout">
                    {{ photo.description }}
                </div>
            </a>
        </li>
    {% endfor %}

    {% if pagerfanta.hasNextPage() %}
        <li class="see-more-block-wrapper float-left" id="instagram-photo-load-more">
            <div class="see-more-block">
                <a class="see-more button js-load-more ie-radius"
                   data-href="{{ pagerfanta_page_url(pagerfanta, pagerfanta.getNextPage()) }}"
                   data-load-more-replace="#instagram-photo-load-more"
                >показать еще...</a>

                <div class="loading-mask g-hidden">
                    <div class="spinner"></div>
                </div>
            </div>
        </li>
    {% endif %}
</ul>

