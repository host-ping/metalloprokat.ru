{% set popupId = 'add-comment' %}

<div id="{{ popupId }}"
     class="add-comment-form popup-block opacity-border large">

    <div class="popup-content">
        <div class="title-popup">Добавить комментарий</div>
        <span class="close-popup icon-popup-close clickable js-popup-closer"></span>

        <form id="{{ popupId }}-form"
              class="popup-form js-ajax-form-submit"
              method="post"
              novalidate="novalidate"
              data-success="redirect"
              data-redirect-location="{{ redirect_url }}"
              data-bind-attr="action:comment-url">
            <fieldset>
                {% if form.name is defined %}
                    <div class="user-name-wrapper field-wrap">
                        {{ form_widget(form.name, {'attr' : { 'class' : 'form-text ie-radius', 'placeholder' : 'Имя' }} ) }}
                    </div>
                {% endif %}

                {% if form.email is defined %}
                    <div class="user-email-wrapper field-wrap">
                        {{ form_widget(form.email, {'attr' : { 'class' : 'form-email ie-radius', 'placeholder' : 'Электронная почта' }}
                        ) }}
                    </div>
                {% endif %}
                <div class="textarea-wrapper field-wrap">
                    <label>Ваш комментарий</label>
                    {{ form_widget(form.description, {'attr' : {'class' : 'form-textarea ie-radius', 'placeholder' : 'Ваш комментарий', 'data' : 'editable-with-bbcode' }}
                    ) }}
                </div>

                {% if form.captcha is defined %}
                    <div class="field-wrap">
                        {{ form_widget(form.captcha) }}
                    </div>
                {% endif %}

                {{ form_widget(form.parent, {'attr' : {'data-bind-value' : 'parent-id'}}) }}
                <div class="submit-wrapper">
                    <input class="popup-form_send-button send-button button blue-bg ie-radius" type="submit" value="Отправить"/>
                </div>
            </fieldset>
            {{ form_rest(form) }}
        </form>
    </div>
</div>