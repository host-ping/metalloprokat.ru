{% extends '@markup/private/statistics/_statistic_layout.html.twig' %}
{% block title 'Медийная реклама' %}
{% block content %}
    <div id="content" class="statistic-content private-room-content content-right outline-right float-right">
        {% block tabs %}
            {% set activeTab = 'stats-media' %}
            {{ parent() }}
        {% endblock tabs %}
        {% block filters %}
            <div class="statistic filters-block outline-right clearfix">
                <ul class="sort-period list float-left">
                    <li class="item float-left">
                        <span class="announcement-link icon-check black clickable float-left js-popover-opener js-tooltip-opener"
                              data-tooltip-title="12 авг 2014 - 13 авг 2015"
                              data-popover="#period">
            Баннер №1
                            <span class="zone-title">(Премиум)</span>
        </span>
                        <a class="announcement-view float-left js-popup-opener" data-popup="#announcement-preview" href="#"></a>

                    </li>
                    <li class="item float-left">
                        <a class="period-link icon-check black link js-popover-opener" data-popover="#period" href="#">За неделю</a>
                        <div id="period" class="drop-wrapper period-list opacity-border">
                            <ul class="dropdown">
                                <li class="drop-item">
                                    <a class="drop-link" href="#">За день</a>
                                </li>
                                <li class="drop-item">
                                    <a class="drop-link" href="#">За неделю</a>
                                </li>
                                <li class="drop-item">
                                    <a class="drop-link" href="#">За месяц</a>
                                </li>
                                <li class="drop-item">
                                    <a class="drop-link" href="#">За весь период</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="item float-left">
                        <div class="period-from float-left">
                            <p class="text">
                                c <span class="icon-calendar js-popover-opener clickable" data-popover="#datepicker-period-from"></span>
                                <input type="text" id="from" class="date" name="from" />
                            </p>
                        </div>
                        <div class="period-for float-left">
                            <p class="text">
                                по <span class="icon-calendar js-popover-opener clickable" data-popover="#datepicker-period-to"></span>
                                <input type="text" id="for" class="date" name="for" />
                            </p>
                        </div>
                    </li>
                    <li class="item float-left">
                        <a class="period-link icon-check black link" href="#">по дням</a>
                    </li>
                </ul>
                <div class="all float-right">
                    <a class="period-link icon-check black link" href="#">Все</a>
                </div>
            </div>
        {% endblock filters %}
        <div class="media-tab">
            <div class="income-graph-wrapper">
                <div id="pie-chart" class="graph-container"></div>
            </div>
            <table class="graph-head stat-table">
                <tr class="row"> {#fixed#}
                    <td class="date col"><span class="head-title sorted asc">Дата</span></td>
                    <td class="views col"><span class="head-title">Показы</span></td>
                    <td class="switch col"><span class="head-title">Переходы</span></td>
                </tr>
            </table>
            <div class="scrollable-table content-scrollable js-scrollable">
                <table class="graph-info stat-table">
